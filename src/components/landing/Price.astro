  transform, opacity; } .card.visible { opacity: 1; transform: translateY(0); } /* Ефект сходинок
  для нерухомих карток */ .card.stacked:nth-child(1) { top: 80px; } .card.stacked:nth-child(2) {
  top: 84px; } .card.stacked:nth-child(3) { top: 88px; } .card.stacked:nth-child(4) { top: 92px; }
  .card.stacked:nth-child(5) { top: 96px; } .card.stacked:nth-child(6) { top: 100px; }
  .card.stacked:nth-child(7) { top: 104px; } }
</style>

<script>
  if (window.innerWidth < 768) { const cards = document.querySelectorAll('.card'); const observer =
  new IntersectionObserver((entries) => { entries.forEach((entry, index) => { if
  (entry.isIntersecting) { entry.target.classList.add('visible'); } else if
  (entry.boundingClientRect.top < 80) { entry.target.classList.add('stacked'); } }); }, { root:
  null, rootMargin: '0px', threshold: 0.1 }); cards.forEach(card => observer.observe(card));
  window.addEventListener('resize', () => { if (window.innerWidth >= 768) { cards.forEach(card => {
  observer.unobserve(card); card.classList.remove('visible', 'stacked'); }); } }); }
</script>
